<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.herd.therobot.app.MoveRobot">

        <Button
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="Forward"
            android:id="@+id/btnForward"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnLeft" />

        <Button
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="Left"
            android:id="@+id/btnLeft"
            android:layout_below="@+id/btnForward"
            android:layout_toLeftOf="@+id/btnFollowMe" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Follow"
        android:id="@+id/btnFollowMe"
        android:layout_below="@+id/btnForward"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Right"
        android:id="@+id/btnRight"
        android:layout_alignTop="@+id/btnFollowMe"
        android:layout_toRightOf="@+id/btnFollowMe" />

    <Button
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:text="Back"
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnFollowMe"
        android:layout_toRightOf="@+id/btnLeft" />

</RelativeLayout>

